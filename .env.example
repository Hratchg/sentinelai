# SentinelAI Environment Configuration
# Copy this file to .env and customize as needed

# Project Settings
PROJECT_NAME=SentinelAI
VERSION=0.1.0

# Detector Settings
DETECTOR_MODEL=yolov8n.pt
DETECTOR_CONFIDENCE=0.25
DETECTOR_IOU=0.45
DETECTOR_DEVICE=cuda  # or cpu
DETECTOR_FP16=true

# Tracker Settings
TRACKER_TYPE=bytetrack
TRACK_THRESH=0.5
TRACK_BUFFER=30
MATCH_THRESH=0.8

# Processing Settings
FRAME_SKIP=2
MAX_DETECTIONS=100
OUTPUT_FPS=15

# Action Recognition
VELOCITY_WALKING_THRESHOLD=3.0
VELOCITY_RUNNING_THRESHOLD=12.0
LOITERING_THRESHOLD=90
STATIONARY_VELOCITY_THRESHOLD=2.0

# Performance
MAX_WORKERS=2
JOB_TIMEOUT=3600

# CORS (for frontend)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
